<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.ltdj.t5" version="1.7.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CounterSpell</name>
    <description>
        A Cordova application to sell/buy Magic and Final Fantasy cards in Le Temple du Jeu shops
    </description>
    <author email="sylouan.corfa@epsi.fr" href="epsi.fr">
        Sylouan CORFA
        Benjamin STRABACH
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="media/CS-logo.png" density="mdpi" />
        <preference name="android-minSdkVersion"  value="16" />
        <preference name="android-targetSdkVersion"  value="26" />
    <preference name="Orientation" value="sensorPortrait" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
</widget>
